@model HabilitationApp.Models.Utilisateur

@{
    ViewData["Title"] = "Créer un utilisateur";
}

<h2>Créer un utilisateur</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Login</label>
        <input asp-for="Login" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nom</label>
        <input asp-for="Nom" class="form-control" />
    </div>

    <div class="form-group">
        <label>Prénom</label>
        <input asp-for="Prenom" class="form-control" />
    </div>

    <div class="form-group">
        <label>Téléphone</label>
        <input asp-for="Telephone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Actif</label>
        <input type="checkbox" asp-for="EstActif" />
    </div>

    <button class="btn btn-success" type="submit">Enregistrer</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Annuler</a>
</form>
