@model HabilitationApp.Models.Utilisateur

@{
    ViewData["Title"] = "Modifier utilisateur";
}

<h2>Modifier l'utilisateur</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Login</label>
        <input asp-for="Login" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Nom</label>
        <input asp-for="Nom" class="form-control" />
    </div>

    <div class="form-group">
        <label>Prénom</label>
        <input asp-for="Prenom" class="form-control" />
    </div>

    <div class="form-group">
        <label>Téléphone</label>
        <input asp-for="Telephone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Actif</label>
        <input type="checkbox" asp-for="EstActif" />
    </div>

    <button class="btn btn-primary" type="submit">Enregistrer</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Retour</a>
</form>
