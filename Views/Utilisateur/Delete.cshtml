@model HabilitationApp.Models.Utilisateur

@{
    ViewData["Title"] = "Supprimer utilisateur";
}

<h2>Supprimer l'utilisateur</h2>

<div class="alert alert-danger">
    Voulez-vous vraiment supprimer cet utilisateur ?
</div>

<ul>
    <li><strong>Login :</strong> @Model.Login</li>
    <li><strong>Nom :</strong> @Model.Nom @Model.Prenom</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserId" />
    <button class="btn btn-danger" type="submit">Supprimer</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Annuler</a>
</form>
