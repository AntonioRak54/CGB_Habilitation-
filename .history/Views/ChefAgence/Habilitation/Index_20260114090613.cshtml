@model IEnumerable<CGB_Habilitation.Models.Habilitation>

@{
    Layout = "~/Views/Shared/_LayoutChefAgence.cshtml";
    ViewData["Title"] = "Gestion des Habilitations";
}

<div class="container">
    <h2>Liste des Habilitations</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle Habilitation
        </a>
    </p>
    
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Type</th>
                <th>Agent</th>
                <th>État</th>
                <th>Date Création</th>
                <th>Date Début</th>
                <th>Date Fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TypeHabilitation</td>
                    <td>@(item.Agent?.NomAgent + " " + item.Agent?.PrenomAgent)</td>
                    <td>
                        <span class="badge @GetBadgeClass(item.Etat)">
                            @item.Etat
                        </span>
                    </td>
                    <td>@item.DateCreationDemande.ToString("dd/MM/yyyy")</td>
                    <td>@(item.DateDebut?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>@(item.DateFin?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.IdHabilitation" 
                               class="btn btn-info btn-sm" title="Voir détails">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.IdHabilitation" 
                               class="btn btn-warning btn-sm" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdHabilitation" 
                               class="btn btn-danger btn-sm" title="Supprimer">
                                <i class="bi bi-trash"></i>
                            </a>
                            
                            @if (item.Etat == "En attente")
                            {
                                <a asp-action="Traiter" asp-route-id="@item.IdHabilitation" 
                                   asp-route-nouvelEtat="Approuvée"
                                   class="btn btn-success btn-sm" title="Approuver">
                                    <i class="bi bi-check-circle"></i>
                                </a>
                                <a asp-action="Traiter" asp-route-id="@item.IdHabilitation" 
                                   asp-route-nouvelEtat="Rejetée"
                                   class="btn btn-danger btn-sm" title="Rejeter">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    string GetBadgeClass(string etat)
    {
        return etat switch
        {
            "Approuvée" => "bg-success",
            "Rejetée" => "bg-danger",
            "En attente" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}