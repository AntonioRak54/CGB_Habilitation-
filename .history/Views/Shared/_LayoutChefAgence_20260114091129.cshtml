<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CGB Chef d'Agence</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    
    <!-- Custom CSS -->
    <style>
        :root {
            --cgb-primary: #1a5f7a;
            --cgb-secondary: #2a9d8f;
            --cgb-success: #28a745;
            --cgb-warning: #ffc107;
            --cgb-danger: #dc3545;
        }
        
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .navbar-cgb {
            background: linear-gradient(135deg, var(--cgb-primary) 0%, var(--cgb-secondary) 100%);
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        
        .sidebar {
            background-color: white;
            min-height: calc(100vh - 56px);
            box-shadow: 0 0 10px rgba(0,0,0,.05);
            position: fixed;
            left: 0;
            top: 56px;
            width: 250px;
            z-index: 1000;
            transition: all 0.3s;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 20px;
            transition: all 0.3s;
        }
        
        .sidebar-collapsed .sidebar {
            width: 70px;
        }
        
        .sidebar-collapsed .main-content {
            margin-left: 70px;
        }
        
        .sidebar .nav-link {
            color: #333;
            padding: 12px 20px;
            margin: 2px 10px;
            border-radius: 8px;
            transition: all 0.3s;
        }
        
        .sidebar .nav-link:hover {
            background-color: rgba(26, 95, 122, 0.1);
            color: var(--cgb-primary);
        }
        
        .sidebar .nav-link.active {
            background-color: var(--cgb-primary);
            color: white;
        }
        
        .sidebar .nav-link i {
            width: 20px;
            text-align: center;
        }
        
        .card-custom {
            border: none;
            border-radius: 10px;
            box-shadow: 0 2px 10px rgba(0,0,0,.05);
            transition: transform 0.2s;
        }
        
        .card-custom:hover {
            transform: translateY(-2px);
        }
        
        .card-header-custom {
            background: linear-gradient(135deg, var(--cgb-primary) 0%, var(--cgb-secondary) 100%);
            color: white;
            border-radius: 10px 10px 0 0 !important;
            padding: 15px 20px;
        }
        
        .btn-cgb {
            background-color: var(--cgb-primary);
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 6px;
            transition: all 0.3s;
        }
        
        .btn-cgb:hover {
            background-color: #154b60;
            color: white;
            transform: translateY(-1px);
        }
        
        .btn-cgb-outline {
            background-color: transparent;
            color: var(--cgb-primary);
            border: 2px solid var(--cgb-primary);
        }
        
        .btn-cgb-outline:hover {
            background-color: var(--cgb-primary);
            color: white;
        }
        
        .stat-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 10px rgba(0,0,0,.05);
        }
        
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 15px;
        }
        
        .badge-custom {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85em;
        }
        
        .user-dropdown .dropdown-toggle::after {
            display: none;
        }
        
        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: white;
            color: var(--cgb-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        
        @media (max-width: 992px) {
            .sidebar {
                width: 70px;
            }
            
            .main-content {
                margin-left: 70px;
            }
            
            .sidebar .nav-text {
                display: none;
            }
        }
        
        @media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }
            
            .main-content {
                margin-left: 0;
            }
        }
    </style>
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-cgb fixed-top">
        <div class="container-fluid">
            <!-- Logo and Brand -->
            <a class="navbar-brand d-flex align-items-center" href="#">
                <div class="user-avatar me-2">
                    <i class="bi bi-building"></i>
                </div>
                <div>
                    <strong>CGB</strong>
                    <div style="font-size: 0.8em;">Chef d'Agence</div>
                </div>
            </a>

            <!-- Toggle button for mobile sidebar -->
            <button class="btn btn-outline-light d-lg-none" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>

            <!-- Right side: User dropdown -->
            <div class="d-flex align-items-center">
                <!-- Notification Bell -->
                <div class="dropdown me-3">
                    <button class="btn btn-outline-light position-relative" 
                            type="button" 
                            data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            3
                            <span class="visually-hidden">Notifications</span>
                        </span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><h6 class="dropdown-header">Notifications</h6></li>
                        <li><a class="dropdown-item" href="#">Nouvelle habilitation en attente</a></li>
                        <li><a class="dropdown-item" href="#">Rapport mensuel disponible</a></li>
                        <li><a class="dropdown-item" href="#">Mise à jour système</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-primary" href="#">Voir toutes</a></li>
                    </ul>
                </div>

                <!-- User Dropdown -->
                <div class="dropdown user-dropdown">
                    <button class="btn btn-outline-light d-flex align-items-center" 
                            type="button" 
                            data-bs-toggle="dropdown">
                        <div class="user-avatar me-2">
                            <i class="bi bi-person"></i>
                        </div>
                        <div class="d-none d-md-block">
                            <small>Connecté en tant que</small>
                            <div><strong>Chef Agence</strong></div>
                        </div>
                        <i class="bi bi-chevron-down ms-2"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" 
                               asp-area="ChefAgence" 
                               asp-controller="Profil" 
                               asp-action="Index">
                                <i class="bi bi-person me-2"></i>Mon profil
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">
                                <i class="bi bi-gear me-2"></i>Paramètres
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" 
                               asp-controller="Auth" 
                               asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar d-none d-lg-block" id="sidebar">
        <div class="sidebar-sticky pt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @IsActive("Dashboard")" 
                       asp-area="ChefAgence" 
                       asp-controller="Dashboard" 
                       asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i>
                        <span class="nav-text">Tableau de bord</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link @IsActive("Habilitation")" 
                       asp-area="ChefAgence" 
                       asp-controller="Habilitation" 
                       asp-action="Index">
                        <i class="bi bi-shield-check me-2"></i>
                        <span class="nav-text">Habilitations</span>
                        <span class="badge bg-danger float-end">5</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link @IsActive("Agent")" 
                       asp-area="ChefAgence" 
                       asp-controller="Agent" 
                       asp-action="Index">
                        <i class="bi bi-people me-2"></i>
                        <span class="nav-text">Agents</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link @IsActive("Rapport")" 
                       asp-area="ChefAgence" 
                       asp-controller="Rapport" 
                       asp-action="Index">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        <span class="nav-text">Rapports</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link @IsActive("Audit")" 
                       asp-area="ChefAgence" 
                       asp-controller="Audit" 
                       asp-action="Index">
                        <i class="bi bi-clipboard-data me-2"></i>
                        <span class="nav-text">Audit</span>
                    </a>
                </li>
                
                <hr class="mx-3">
                
                <li class="nav-item">
                    <a class="nav-link @IsActive("Profil")" 
                       asp-area="ChefAgence" 
                       asp-controller="Profil" 
                       asp-action="Index">
                        <i class="bi bi-person-circle me-2"></i>
                        <span class="nav-text">Mon profil</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-question-circle me-2"></i>
                        <span class="nav-text">Aide & Support</span>
                    </a>
                </li>
            </ul>
            
            <!-- Current Date & Time -->
            <div class="position-absolute bottom-0 start-0 w-100 p-3">
                <div class="text-center small text-muted">
                    <div id="current-time"></div>
                    <div id="current-date"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        <div style="margin-top: 56px; padding: 20px;">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="ChefAgence" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-house-door"></i>
                        </a>
                    </li>
                    @RenderSection("Breadcrumb", required: false)
                </ol>
            </nav>

            <!-- Page Title -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">@ViewData["Title"]</h2>
                    @if (ViewData["Subtitle"] != null)
                    {
                        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
                    }
                </div>
                @RenderSection("PageActions", required: false)
            </div>

            <!-- Main Content Area -->
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light border-top py-3 mt-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">
                        &copy; @DateTime.Now.Year - CGB Habilitation System v1.0
                    </span>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted">
                        Dernière connexion: @DateTime.Now.AddHours(-2).ToString("dd/MM/yyyy HH:mm")
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    
    <!-- Toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    
    <!-- Custom Scripts -->
    <script>
        // Initialize DataTables
        $(document).ready(function() {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
                },
                responsive: true
            });
            
            // Update date and time
            function updateDateTime() {
                const now = new Date();
                $('#current-time').text(now.toLocaleTimeString('fr-FR'));
                $('#current-date').text(now.toLocaleDateString('fr-FR', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                }));
            }
            
            updateDateTime();
            setInterval(updateDateTime, 60000);
            
            // Sidebar toggle for mobile
            $('#sidebarToggle').click(function() {
                $('body').toggleClass('sidebar-collapsed');
            });
            
            // Auto-hide sidebar on mobile
            $(document).on('click', function(event) {
                if ($(window).width() < 992) {
                    if (!$(event.target).closest('#sidebar, #sidebarToggle').length) {
                        $('body').removeClass('sidebar-collapsed');
                    }
                }
            });
            
            // Toastr notifications
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000"
            };
            
            // Display temp data messages
            @if (TempData["SuccessMessage"] != null)
            {
                <text>toastr.success('@TempData["SuccessMessage"]');</text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <text>toastr.error('@TempData["ErrorMessage"]');</text>
            }
            @if (TempData["WarningMessage"] != null)
            {
                <text>toastr.warning('@TempData["WarningMessage"]');</text>
            }
        });
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>

@functions {
    string IsActive(string controller)
    {
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        return currentController == controller ? "active" : "";
    }
}