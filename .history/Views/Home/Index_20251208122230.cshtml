@* @model IEnumerable<> *@

@{
    ViewData["Title"] = "Liste des utilisateurs";
}

<h2>Liste des utilisateurs</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Créer un utilisateur</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Login</th>
            <th>Email</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Téléphone</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Login</td>
            <td>@item.Email</td>
            <td>@item.Nom</td>
            <td>@item.Prenom</td>
            <td>@item.Telephone</td>
            <td>@(item.EstActif ? "Oui" : "Non")</td>

            <td>
                <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = item.UserId })">Details</a>
                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = item.UserId })">Modifier</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.UserId })">Supprimer</a>
            </td>
        </tr>
    }
    </tbody>
</table>
