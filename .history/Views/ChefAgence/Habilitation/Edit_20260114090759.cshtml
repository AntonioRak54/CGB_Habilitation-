@model CGB_Habilitation.Models.Habilitation

@{
    Layout = "~/Views/Shared/_LayoutChefAgence.cshtml";
    ViewData["Title"] = "Modifier l'Habilitation";
}

<div class="container">
    <h2>Modifier l'Habilitation</h2>
    
    <hr />
    
    <form asp-action="Edit">
        <input type="hidden" asp-for="IdHabilitation" />
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TypeHabilitation" class="form-label"></label>
                    <input asp-for="TypeHabilitation" class="form-control" />
                    <span asp-validation-for="TypeHabilitation" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Etat" class="form-label"></label>
                    <select asp-for="Etat" class="form-control">
                        <option value="En attente">En attente</option>
                        <option value="Approuvée">Approuvée</option>
                        <option value="Rejetée">Rejetée</option>
                    </select>
                    <span asp-validation-for="Etat" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="IdAgent" class="form-label">Agent</label>
                    <select asp-for="IdAgent" class="form-control" 
                            asp-items="@(new SelectList(ViewBag.Agents, "IdAgent", "NomAgent"))">
                    </select>
                    <span asp-validation-for="IdAgent" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="DateDebut" class="form-label"></label>
                    <input asp-for="DateDebut" type="date" class="form-control" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="DateFin" class="form-label"></label>
                    <input asp-for="DateFin" type="date" class="form-control" />
                    <span asp-validation-for="DateFin" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Motif" class="form-label"></label>
                    <textarea asp-for="Motif" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Motif" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="form-group mt-4">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}