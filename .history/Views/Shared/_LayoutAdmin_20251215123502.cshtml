<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin CGB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding-top: 20px; }
        .navbar { margin-bottom: 20px; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">CGB Admin</a>
                <div class="navbar-nav">
                    <a class="nav-link" asp-controller="Agent" asp-action="Index">Agents</a>
                    <a class="nav-link" asp-controller="Parametre" asp-action="Roles">Rôles</a>
                    <a class="nav-link" href="/Auth/Login">Déconnexion</a>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>